{
  "name": "codeview",
  "version": "1.0.0",
  "private": true,
  "description": "Real-time collaborative coding interview platform",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:backend": "pnpm --filter codeview-backend dev",
    "dev:frontend": "pnpm --filter codeview-frontend dev",
    "build": "pnpm --filter codeview-backend build && pnpm --filter codeview-frontend build",
    "build:backend": "pnpm --filter codeview-backend build",
    "build:frontend": "pnpm --filter codeview-frontend build",
    "test": "pnpm --filter codeview-backend test",
    "test:watch": "pnpm --filter codeview-backend test:watch"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.15.1"
}

